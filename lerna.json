{
  "version": "1.8.0",
  "loglevel": "verbose",
  "npmClient": "pnpm",
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "gitDryRun": false,
      "syncWorkspaceLock": true,
      "changelogIncludeCommitAuthorUsername": " by (%a)",
      "changelogHeaderMessage": "### Automate your Workspace Versions, Changelogs & Publish with [Lerna-Lite](https://github.com/ghiscoding/lerna-lite) ðŸš€",
      "message": "chore(release): publish new version %v"
    },
    "run": {
      "cmdDryRun": false
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/helpers/**",
    "**/*.md"
  ],
  "packages": [
    "packages/*"
  ]
}
